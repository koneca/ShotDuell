{# templates/mainPage.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Schinzeguggis ShotsDuell{% endblock %}

{% block body %}
<div id="banner">
<a href="{{ path('bar_view')}}"><img src="{{ asset('images/schinzeguggis.png') }}" height="120"></a>
</div>
<div id="wrapper">
    <div id="bars_container">
     {% for team in teams %}
        <div id="glass_container" href="{{ path('increase_shot', {id: team.id}) }}">
        <div>
            <div class="glass_header" id="score_team_{{ team.id }}">{{team.shotsCount}}</div>
            <div class="glass_top"></div>
            <div id="scoreHeight_team_{{ team.id }}" class="glass_middle" style="height: {{ team.shotsCount|genHeight() }}px; background-color: {{ team.color}}">
	    <span class="bottom_text">{{team.shotsCount}}</span>
	    </div>
            <div class="glass_bottom"></div>
            <div class="glass_name">{{ team.teamName|raw }}</div>
            </div>
        </div>
     {% endfor %}
    </div>
    <div id="left">
      <a <a href="{{ path('chart_view') }}">
        <img src="images/snoop.gif" width="170">
      </a>
    </div>
    <div id="right">
      <a href="{{ path('new_team') }}">
        <img src="{{ asset('images/schinzeguggi.png') }}" height="300">
      </a>
    </div>
</div>

<script>

</script>
{% endblock %}
